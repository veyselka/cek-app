<Window x:Class="CheckPrintApp.UI.Views.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YazdÄ±rma Ã–nizlemesi" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ã–nizleme AlanÄ± -->
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#2196F3"
                BorderThickness="2"
                Margin="10">
            <DocumentViewer x:Name="DocumentViewer" 
                            Background="#F5F5F5"/>
        </Border>

        <!-- Alt Butonlar -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="PrintButton"
                        Content="ðŸ–¨ YazdÄ±r" 
                        Width="150"
                        Height="45"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,15,0"
                        Cursor="Hand"
                        Click="PrintButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button x:Name="CancelButton"
                        Content="âŒ Ä°ptal" 
                        Width="150"
                        Height="45"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#9E9E9E"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#757575"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
